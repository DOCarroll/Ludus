<h1>Listing msgs</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @msgs.each do |msg| %>
      <tr>
        <td><%= msg.content %></td>
        <td><%= link_to 'Show', msg %></td>
        <% if msg.user == current_user %>
        <td><%= link_to 'Edit', edit_msg_path(msg) %></td>
        <td><%= link_to 'Destroy', msg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
