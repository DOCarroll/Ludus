
<aside class="col-xs-12 col-sm-3 channels">
  <h3>Available Channels</h3>
  <ol class="channel-list">
    <% @channels.each do |channel| %>
      <li class="channel-list-item">
        
        <%= link_to channel.title, channel %>
        <% #link_to 'Edit', edit_channel_path(channel) %>
        <% #link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>

  </ol>
  <%= link_to 'New Channel', new_channel_path, :class => "button" %>
</aside>

